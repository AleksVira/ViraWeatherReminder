<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.virarnd.viraweatherreminder">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- <activity android:name=".CurrentWeather" /> -->
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".common.OpenWeatherForecastRequester"></activity> -->

        <service
            android:name=".common.AskOpenWeatherService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>